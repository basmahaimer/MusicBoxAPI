                "operationId": "735609843dcfb89ee4e12e340eddca25",
                "parameters": [
                    {
                        "name": "title",
                        "in": "query",
                        "description": "Filtrer par titre de l'album",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "artist",
                        "in": "query",
                        "description": "Filtrer par nom d'artiste",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "year",
                        "in": "query",
                        "description": "Filtrer par année",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
